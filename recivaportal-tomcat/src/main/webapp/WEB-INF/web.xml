<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Fake Reciva Portal Web Application</display-name>
   <servlet>
    <servlet-name>jersey-servlet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

    <init-param>
        <param-name>jersey.config.server.provider.packages</param-name>
        <param-value>com.felixalacampagne.recivaportal.RecivaPortalRestTC</param-value>
    </init-param>
    <init-param>
        <param-name>jakarta.ws.rs.core.Application</param-name>
        <param-value>com.felixalacampagne.recivaportal.RecivaPortalApplication</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>



  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/sharpfin/*</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>jersey-servlet</servlet-name>
  <url-pattern>/*</url-pattern>
</servlet-mapping>


</web-app>
